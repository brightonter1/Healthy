<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sleep_form_backBtn"
        android:hint="Back"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"/>


    <EditText
        android:id="@+id/sleep_form_date"
        android:hint="วันที่"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="50dp"

        />
    <EditText
        android:id="@+id/sleep_form_timeToSleep"
        android:hint="เวลาเข้านอน"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/sleep_form_timeToWakeUp"
        android:hint="เวลาตื่น"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/weight_form_saveBtn"
        android:hint="Save"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"/>


</LinearLayout>